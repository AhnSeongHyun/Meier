{% extends "/admin/layout.j2" %}

{% block css_section %}
{% endblock css_section %}

{% block content_section %}
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Edit Profile</h4>
                </div>
                <div class="card-body" id="vue-section">
                    <!-- edit profile section -->

                    <div class="row">
                        <div class="col-md-6 pr-1">
                            <div class="form-group">
                                <label>Email</label>
                                <input type="text" class="form-control"  placeholder="Email" v-model="email">
                            </div>
                        </div>
                        <div class="col-md-6 px-1">
                            <div class="form-group">
                                <label>Username</label>
                                <input type="text" class="form-control" placeholder="Username" v-model="user_name">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 pr-1">
                            <div class="form-group">
                                <label>Facebook Profile</label>
                                <input type="text" class="form-control" placeholder="Facebook Profile" v-model="facebook_profile">
                            </div>
                        </div>
                        <div class="col-md-4 pl-1">
                            <div class="form-group">
                                <label>Twitter Profile</label>
                                <input type="text" class="form-control" placeholder="Twitter Profile" v-model="twitter_profile">
                            </div>
                        </div>
                        <div class="col-md-4 pl-1">
                            <div class="form-group">
                                <label>Website</label>
                                <input type="text" class="form-control" placeholder="Website" v-model="website">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Bio</label>
                                <textarea rows="4" class="form-control"
                                          placeholder="Here can be your description" v-model="user_desc">
                                                </textarea>
                            </div>
                        </div>
                    </div>
                </div>

                <button class="btn btn-primary btn-round  float-right" v-on:click="update" style="margin-right: 10px;">
                    UPDATE
                </button>
                <!--//edit profile section -->
            </div>
        </div>

        <!-- change password section -->
        <div class="col-md-2">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Change Password</h4>
                </div>
                <div class="card-body">
                </div>
            </div>
        </div>
        <!--//change password section -->
    </div>
{% endblock %}
{% block javascript_section %}
    <script src="{{ url_for('static', filename='js/admin/user/user.js') }}" type="text/javascript"></script>
{% endblock %}