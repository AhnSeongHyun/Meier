{% extends "/admin/layout.j2" %}

{% block css_section %}
    <link href="{{ url_for('static', filename='lib/codemirror/lib/codemirror.css') }}" rel="stylesheet" />
    <link href="{{ url_for('static', filename='lib/highlight.js/styles/github.css') }}" rel="stylesheet" />
    <link href="{{ url_for('static', filename='lib/tui-editor/dist/tui-editor.css') }}" rel="stylesheet" />
    <link href="{{ url_for('static', filename='lib/tui-editor/dist/tui-editor-contents.css') }}" rel="stylesheet" />
    <style>
        .title-section{
            margin-bottom: 10px;
        }
        .title{
            font-size: 20px;
        }
        .te-switch-button {
            font-family: inherit;
        }
        .te-md-container .CodeMirror{
            font-size: 16px;
        }
        .tui-editor-contents {
            font-size: 16px;
        }

    </style>
{% endblock css_section %}

{% block content_section %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title"> </h4>
                </div>
                <div class="card-body" id="vue-section">
                    <div class="title-section">
                        <textarea rows="1" class="form-control title" placeholder="title"></textarea>
                    </div>

                    <div class="btn-toolbar justify-content-end" role="toolbar" aria-label="Toolbar with button groups" >
                        <div class="btn-group mr-2" role="group" aria-label="Second group">
                            <button type="button" class="btn btn-secondary"  v-on:click="delete">DELETE</button>
                        </div>
                        <div class="btn-group" role="group" aria-label="Third group">
                            <button type="button" class="btn btn-primary" v-on:click="save">SAVE</button>
                        </div>
                    </div>

                    <div class="editor-section" id="editor"></div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript_section %}
    <script src="{{ url_for('static', filename='lib/markdown-it/dist/markdown-it.min.js') }}"></script>
    <script src="{{ url_for('static', filename='lib/to-mark/dist/to-mark.min.js') }}"></script>
    <script src="{{ url_for('static', filename='lib/tui-code-snippet/dist/tui-code-snippet.min.js') }}"></script>
    <script src="{{ url_for('static', filename='lib/squire-rte/build/squire-raw.js') }}"></script>
    <script src="{{ url_for('static', filename='lib/codemirror/lib/codemirror.js') }}"></script>
    <script src="{{ url_for('static', filename='lib/highlight.js/lib/highlight.js') }}"></script>
    <script src="{{ url_for('static', filename='lib/tui-editor/dist/tui-editor-Editor.js') }}"></script>
    <script src="{{ url_for('static', filename='lib/tui-editor/dist/tui-editor-extScrollSync.js') }}"></script>
    <script src="{{ url_for('static', filename='js/admin/writer/writer.js') }}" type="text/javascript"></script>
{% endblock %}