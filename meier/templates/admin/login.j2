<!DOCTYPE html>
<html lang="kr">
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="{{ url_for('static', filename='img/apple-icon.png') }}">
    <link rel="icon" type="image/png" href="{{ url_for('static', filename='img/favicon.png') }}">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>Meier - Login</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <!-- Fonts and icons -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
    <!-- CSS Files -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" />
    <link href="{{ url_for('static', filename='css/now-ui-kit.css') }}" rel="stylesheet" />
    <script type="text/javascript">
        var $SCRIPT_ROOT = {{ request.script_root|tojson|safe }};
    </script>
</head>

<body class="login-page sidebar-collapse">

<div class="page-header" filter-color="orange">
    <div class="page-header-image" style="background-image:url({{ url_for('static', filename='img/login.jpg') }}"></div>
    <div class="container">
        <div class="col-md-4 content-center">
            <div class="card card-login card-plain">
                <form class="form" id="vue-section">
                    <div class="header header-primary text-center">
                        <h2>MEIER</h2>
                    </div>
                    <div class="content">
                        <div class="input-group form-group-no-border input-lg">
                            <input type="text" id="email" v-model="email" class="form-control" placeholder="EMAIL">
                        </div>
                        <div class="input-group form-group-no-border input-lg">
                            <input type="password" id="password" v-model="password" v-on:keyup.13='login' placeholder="PASSWORD" class="form-control" />
                        </div>
                    </div>
                    <div class="footer text-center" >
                        <a href="#pablo" id="login" v-on:click="login" class="btn btn-primary btn-round btn-lg btn-block">SIGN IN</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/vue"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="{{ url_for('static', filename='js/now-ui-kit.js') }}" type="text/javascript"></script>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="{{ url_for('static', filename='js/bootstrap-notify.js') }}"></script>
<script src="{{ url_for('static', filename='js/admin/user/login.js') }}" type="text/javascript"></script>
<script>
	function showNotification(color, msg){
    	$.notify({
        	icon: null,
        	message: '<strong>' + msg + '</strong>'
        },{
            type: color,
            timer: 8000,
            placement: {
                from: 'top',
                align: 'right'
            }
        });
	}
</script>
</html>